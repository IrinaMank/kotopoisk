<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.gms.maps.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/confirmation_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="@dimen/activity_map_location_button_width"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/activity_map_location_margin_bottom"
        android:layout_marginStart="@dimen/activity_map_location_margin"
        android:text="@string/confirm"
        android:textColor="@color/colorPrimaryDark"
        android:visibility="gone" />

    <Button
        android:id="@+id/changing_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="@dimen/activity_map_location_button_width"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/activity_map_location_margin_bottom"
        android:layout_marginEnd="@dimen/activity_map_location_margin"
        android:text="@string/change"
        android:textColor="@color/colorPrimaryDark"
        android:visibility="gone" />


</FrameLayout>